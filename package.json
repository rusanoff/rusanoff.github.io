{
  "name": "rusanoff.github.io",
  "version": "1.0.0",
  "description": "Online business card",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview --host",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rusanoff/rusanoff.github.io.git"
  },
  "author": "Andrey Rusanov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rusanoff/rusanoff.github.io/issues"
  },
  "homepage": "https://github.com/rusanoff/rusanoff.github.io#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/postcss-flexbugs-fixes": "^5.0.3",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "@vitejs/plugin-legacy": "^4.1.1",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.34.3",
    "globals": "^15.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.39",
    "postcss-scss": "^4.0.9",
    "sass": "^1.77.6",
    "stylelint": "^16.6.1",
    "terser": "^5.31.1",
    "typescript": "^5.5.2",
    "vite": "^5.3.2",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-live-reload": "^3.0.3"
  },
  "dependencies": {
    "autoprefixer": "^10.4.19",
    "modern-css-reset": "^1.4.0",
    "postcss-flexbugs-fixes": "^5.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint ./ --max-warnings=0",
    "*.{css,scss}": "stylelint './src/**/*.{css,scss}' --max-warnings=0"
  },
  "overrides": {
    "eslint": "^8.57.0",
    "vite": "^5.3.2"
  }
}
