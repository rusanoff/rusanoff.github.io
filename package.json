{
  "name": "rusanoff.github.io",
  "version": "1.0.0",
  "description": "Online business card",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview --host",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rusanoff/rusanoff.github.io.git"
  },
  "author": "Andrey Rusanov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rusanoff/rusanoff.github.io/issues"
  },
  "homepage": "https://github.com/rusanoff/rusanoff.github.io#readme",
  "devDependencies": {
    "@commitlint/cli": "^18.4.1",
    "@commitlint/config-conventional": "^18.4.0",
    "@types/postcss-flexbugs-fixes": "^5.0.3",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vitejs/plugin-legacy": "^4.1.1",
    "eslint": "^8.53.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react": "^7.33.2",
    "globals": "^13.23.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "postcss": "^8.4.31",
    "postcss-scss": "^4.0.9",
    "sass": "^1.69.5",
    "stylelint": "^15.11.0",
    "terser": "^5.24.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-live-reload": "^3.0.2"
  },
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "modern-css-reset": "^1.4.0",
    "postcss-flexbugs-fixes": "^5.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint ./ --max-warnings=0",
    "*.{css,scss}": "stylelint './src/**/*.{css,scss}' --max-warnings=0"
  }
}
