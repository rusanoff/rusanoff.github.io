root = true

[*]
end_of_line = lf
charset = utf-8
max_line_length = 120

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[*.{js,jsx,ts,tsx,css,scss,html,json}]
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[*.html]
indent_size = 4

[*.{js,jsx,ts,tsx,css,scss,json}]
indent_size = 2
